{
  "name": "bemo-sass",
  "version": "0.1.0",
  "homepage": "https://cantierecreativo.github.io/bemo/",
  "author": {
    "name": "Cantiere Creativo",
    "email": "info@cantierecreativo.net",
    "url": "https://cantierecreativo.net"
  },
  "description": "Modern CSS framework based on utilities and power of blocks",
  "main": "sass/bemo.sass",
  "unpkg": "css/bemo.css",
  "style": "bemo/css/bemo.min.css",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cantierecreativo/bemo.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "bem",
    "flexbox",
    "grid",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/cantierecreativo/bemo/issues"
  },
  "scripts": {
    "build": "yarn run build-clean && yarn run build-sass && yarn run build-autoprefix && yarn run build-cleancss",
    "build-autoprefix": "postcss --use autoprefixer --map false --output css/bemo.css css/bemo.css",
    "build-cleancss": "cleancss -o css/bemo.min.css css/bemo.css",
    "build-clean": "rimraf css",
    "build-sass": "node-sass --output-style expanded --source-map true bemo-theme.sass css/bemo.css",
    "deploy": "yarn run build",
    "start": "yarn run build-sass -- --watch"
  },
  "bin": {
    "scaffold": "./tools/scaffold.js",
    "component": "./tools/component.js"
  },
  "files": [
    "css",
    "sass",
    "LICENSE.md",
    "README.md"
  ],
  "dependencies": {
    "colors": "^1.3.3",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "meow": "^5.0.0",
    "simple-git": "^1.107.0",
    "stylelint": "^9.10.1",
    "stylelint-config-bemo": "file:../stylelint-config-bemo"
  },
  "devDependencies": {
    "autoprefixer": "^9.4.9",
    "clean-css-cli": "^4.2.1",
    "node-sass": "^4.11.0",
    "postcss-cli": "^6.1.2",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1"
  }
}
